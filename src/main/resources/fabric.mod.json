			{
				"adapter": "kotlin",
				"value": "io.github.epicvon2468.project_eva.ProjectEva"
			}
		],
		"client": [
			{
				"adapter": "kotlin",
				"value": "io.github.epicvon2468.project_eva.ProjectEvaClient"
			}
